{
    "workbench.colorCustomizations": {
        "activityBar.background": "#053521",
        "titleBar.activeBackground": "#074A2E",
        "titleBar.activeForeground": "#EFFEF8"
    },
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.organizeImports": true
    },
    "files.exclude": {
        "**/*.js": {
            "when": "$(basename).ts"
        },
        "**/*.js.map": true,
        "node_modules": true,
        "**/.classpath": true,
        "**/.project": true,
        "**/.settings": true,
        "**/.factorypath": true
    }
}
